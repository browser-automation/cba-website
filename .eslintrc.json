{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "brace-style": ["error", "allman"],
    "eol-last": ["error", "always"],
    "indent": ["error", 2],
    "no-unused-vars":"error",
    "no-trailing-spaces": "error"
  }
}