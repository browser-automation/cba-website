<% if (site.notification && !site.notification.disabled) { %>
  <% const {text, link, image, target, match} = site.notification; %>
  <% if (match && !(new RegExp(match).test(page.pathname))) return; %>
  <div id="notification">
    <span>
      <%= text %>
      <a href="<%= link.href %>" target="<%= link.target %>">
        <%= link.text %>
        <% if (image) {%>
          <img src="<%= image.path %>" alt="image.alt">
        <% } %>
      </a>
    </span>
  </div>
<% } %>
