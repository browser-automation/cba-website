<!DOCTYPE html>
<html>
  <head>
    <% include _head %>
  </head>
  <body>
    <header>
      <h1><a href="#"><%= site.title %></a></h1>
      <p><%= site.subtitle %></p>
      <% include _navigation %>
    </header>
    <nav id="sidebar">
      <h2>Main menu</h2>
      <%- include _sidebar %>
    </nav>
    <main>
      <nav aria-label="Breadcrumb" id="breadcrumb">
        <% include _breadcrumbs %>
      </nav>
      <article>
        <h1><%= page.title %></h1>
        <%- page.body %>
      </article>
    </main>
  </body>
</html>
